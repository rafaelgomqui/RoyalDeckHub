<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema normal de la app - Sin Action Bar -->
    <style name="Theme.RoyalDeckHub" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Pantalla completa -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Tema para el lanzamiento -->
    <style name="Theme.AppLaunch" parent="Theme.SplashScreen">
        <!-- Fondo que coincida con splash -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Logo a mostrar inmediatamente -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_app</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Pantalla completa -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Tema al que cambiar despuÃ©s del splash -->
        <item name="postSplashScreenTheme">@style/Theme.RoyalDeckHub</item>
    </style>

</resources>